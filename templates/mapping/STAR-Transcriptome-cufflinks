#!/bin/bash -eu        
STAR --runThreadN ${cpus} \
     --genomeDir ${genomeDir} \
     --readFilesIn ${reads} \
     --outSAMunmapped Within \
     --outFilterType BySJout \
     --outSAMattributes NH HI AS NM MD \
     --outFilterMultimapNmax ${maxMultimaps} \
     --outFilterMismatchNmax 999 \
     --outFilterMismatchNoverReadLmax 0.0${maxMismatches} \
     --alignIntronMin 20 \
     --alignIntronMax 1000000 \
     --alignMatesGapMax 1000000 \
     --alignSJoverhangMin 8 \
     --alignSJDBoverhangMin 1 \
     --readFilesCommand pigz -p${cpus} -dc \
     --outSAMtype BAM SortedByCoordinate \
     --quantMode TranscriptomeSAM \
     --outSAMattrRGline ${readGroup} \
     --outSAMstrandField intronMotif \
     --outFilterIntronMotifs RemoveNoncanonical
mv Aligned.sortedByCoord.out.bam ${id}${prefix}.bam
mv Aligned.toTranscriptome.out.bam ${id}${prefix}.toTranscriptome.bam
samtools index ${id}${prefix}.bam