// Process Configuration
process {

    executor = 'sge'
    queue    = 'rg-el6,long-sl65'
    penv = 'smp'

    $index {
        module = 'gemtools/1.7.1-i3'
        cpus = 4
        memory = '16G'
        time = '24h'
    }
    $t_index {
        module = 'gemtools/1.7.1-i3'
        cpus = 4
        memory = '16G'
        time = '24h'
    }
    $mapping {
        module = 'gemtools/1.7.1-i3'
        cpus = 8
        memory = '64G'
        time = '48h'
    }
    $gemToBam {
        module = 'gemtools/1.7.1-i3:pigz'
        cpus = 8
        memory = '64G'        
    }
    $mergeBam {
        cpus = 8
        memory = '32G' 
    }
    $inferExp {
        module = 'ucsc'
    }
    $bigwig {
        module = 'BEDTools/2.19.1-goolf-1.4.10-no-OFED'
        cpus = 4
        memory = '16G'
        time = '12h'
    }
    $contig {
        module = 'BEDTools/2.19.1-goolf-1.4.10-no-OFED:SAMtools/0.1.19-goolf-1.4.10-no-OFED:bamflag'
        cpus = 4
        memory = '16G'
        time = '12h'
    }
    $quantification {
        module = 'flux/1.6.1'
        memory = '32G'
        time = '24h'
    }

}
