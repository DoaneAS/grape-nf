// main script name
manifest.mainScript = 'grape-pipeline.nf'

// Process Configuration
process {

    errorStrategy = { params?.errorStrategy }
    
    tag = { if (view) id else species }

    $index {
        cpus = 4
        memory = '15G'
        time = '24h'
    }
    $t_index {
        cpus = 4
        memory = '15G'
        time = '24h'
    }
    $mapping {
        cpus = 8
        memory = '62G'
        time = '48h'
    }
    $gemToBam {
        cpus = 8
        memory = '62G'
        time = '12h'
    }
    $mergeBam {
        cpus = 8
        memory = '31G'
        time = '12h'
    }
    $inferExp {
        time = '2h'
    }
    $bigwig {
        cpus = 4
        memory = '15G'
        time = '12h'
    }
    $contig {
        cpus = 4
        memory = '31G'
        time = '12h'
    }
    $quantification {
        memory = '31G'
        time = '24h'
    }

}
