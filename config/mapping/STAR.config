// Process configuration
process {

    $index {
        tool = 'STAR'
        cpus = 4
        memory = '62G'
        time = '24h'
    }
    $mapping {
        tool = 'STAR'
        readGroup = { readGroupList.collect { it.join(":") }.join(" ") }
        profile = { params.cufflinks ? "-"+params.cufflinks : '' }
        modules = [tool, 'pigz', 'SAMtools']
        cpus = 8
        memory = '62G'
        time = '48h'
    }

}
