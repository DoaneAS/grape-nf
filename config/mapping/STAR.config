// Process configuration
process {

    $index {
        tool = 'STAR'
        version = '2.4.0j'
        cpus = 4
        memory = '62G'
        time = '24h'
    }
    $mapping {
        tool = 'STAR'
        version = '2.4.0j'
        readGroup = { readGroupList.collect { it.join(":") }.join(" ") }
        profile = { (quantificationMode ? "-"+quantificationMode : '') + (params.cufflinks ? "-"+params.cufflinks : '') }
        cpus = 8
        memory = '62G'
        time = '48h'
    }

}
