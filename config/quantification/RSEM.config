// Process configuration
process {
    ext {
        tool = 'RSEM'
        version = '1.2.21'
    }
    $t_index {
        cpus = 4
        memory = '15G'
        time = '24h'
    }
    $quantification {
        cpus = 8
        memory = '62G'
        time = '24h'
        ext {
            profile = { '-' + (pairedEnd ? 'Paired-End' : 'Single-End') + '-' + readStrand }
            mode = 'Transcriptome'
            fileType = 'tsv'
        }
    }
}
